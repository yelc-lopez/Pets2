<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tamanio_cards"
    android:layout_marginTop="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagenTarjeta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/etologia"
            android:transitionName="@string/transitionName"/>

        <TextView
            android:id="@+id/tituloTarjeta"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/colorFondoCard"
            android:gravity="right|bottom"
            android:text="Etimologia"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/texto_cards" />

        <TextView
            android:id="@+id/detalle_Tarjeta"
            android:layout_width="0dp"
            android:layout_height="0dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>

